{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Recursos Schema",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "id",
            "title",
            "category",
            "variants"
        ],
        "properties": {
            "id": {
                "type": "string"
            },
            "title": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "category": {
                "type": "string"
            },
            "tags": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "license": {
                "type": "object"
            },
            "author": {
                "type": "string"
            },
            "date_added": {
                "type": "string",
                "format": "date-time"
            },
            "preview": {
                "type": "string"
            },
            "variants": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "id",
                        "files"
                    ],
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        },
                        "preview": {
                            "type": "string"
                        },
                        "files": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "url"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string"
                                    },
                                    "filename": {
                                        "type": "string"
                                    },
                                    "mime": {
                                        "type": "string"
                                    },
                                    "size_bytes": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}